    assertthat,
    caret,
    data.table,
    glue,
    Matrix,
    matrixStats,
    purrr,
    R6,
    sf,
    terra,
    tictoc
Suggests:
    INLA
Additional_repositories: https://inla.r-inla-download.org/R/testing/
